{
  "manifest_version": 3,
  "name": "VRT3X - The Sucker",
  "version": "1.0.0",
  "description": "Automated data capture for PointClickCare staffing grids. Part of VRT3X operational integrity platform.",
  "permissions": [
    "storage",
    "activeTab",
    "alarms"
  ],
  "host_permissions": [
    "https://*.pointclickcare.com/*",
    "https://vrt3x.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.pointclickcare.com/Facilitator/Staffing/DailyStaffing.aspx*",
        "http://localhost:8000/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

